<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left">

        <Button
            android:id="@+id/signup_btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#FFFFFF"
            android:background="@color/backbutton"
            android:textSize="18sp"
            android:onClick="backButtonPressed" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="10" >

                <TextView
                    android:id="@+id/signup_tUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Username: "
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/signup_eTxtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="7"
                    android:background="@color/edittext"
                    android:ems="10"
                    android:hint=" username"
                    android:inputType="textPersonName"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="10"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/signup_tPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Password: "
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/signup_eTxtPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="7"
                    android:background="@color/edittext"
                    android:ems="10"
                    android:hint=" password"
                    android:inputType="textPassword"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="10"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/signup_tName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Name: "
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/signup_eTxtName"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="7"
                    android:background="@color/edittext"
                    android:ems="10"
                    android:hint=" name"
                    android:inputType="textPersonName"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="10"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/signup_tGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Gender:"
                    android:textColor="#000000"
                    android:textSize="20sp" />


                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/signup_rbtnMale"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:buttonTint="#00C8FF"
                        android:checked="true"
                        android:text="Male"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/signup_rbtnFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:buttonTint="#00C8FF"
                        android:text="Female"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp" >

                <Button
                    android:id="@+id/signup_btnSignup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00C8FF"
                    android:onClick="signupButtonPressed"
                    android:text="Sign Up"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>